APP_NAME=Smart-Tend Face Recognition
HOST=0.0.0.0
PORT=8002
DEBUG=False

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000

# PostgreSQL Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=smart_attendance
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123

# Storage Configuration
# Options: "local" or "s3"
STORAGE_TYPE=local

# Local Storage (Default - No AWS needed!)
LOCAL_STORAGE_PATH=./storage/faces

# AWS S3 Settings (OPTIONAL - Only if STORAGE_TYPE=s3)
# Leave empty or remove these lines if not using AWS
# AWS_ACCESS_KEY_ID=your_aws_key_here
# AWS_SECRET_ACCESS_KEY=your_aws_secret_here
# AWS_REGION=us-east-1
# S3_BUCKET_NAME=smart-attend-faces

# Face Detection Settings
DETECTION_CONFIDENCE=0.7
MIN_FACE_SIZE=80
MAX_FACES_PER_FRAME=50

# Face Recognition Settings
RECOGNITION_THRESHOLD=0.6
EMBEDDING_SIZE=512

# Liveness Detection
ENABLE_LIVENESS=True
LIVENESS_THRESHOLD=0.85

# Video Processing
VIDEO_FRAME_RATE=2
MAX_VIDEO_DURATION=10
BATCH_SIZE=16

# GPU Settings
USE_GPU=False
GPU_DEVICE=0

# Logging
LOG_LEVEL=INFO