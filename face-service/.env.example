# Application
APP_NAME=Face Recognition Service
APP_ENV=development
DEBUG=true

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=attendance
DB_USER=postgres
DB_PASSWORD=postgres123
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# Face Detection Configuration
FACE_CONFIDENCE_THRESHOLD=0.9
MIN_FACE_SIZE=20
MTCNN_THRESHOLDS=0.6,0.7,0.9

# Face Recognition Configuration
RECOGNITION_THRESHOLD=0.75
EMBEDDING_DIMENSION=512
MODEL_VERSION=v1.0

# Video Processing
VIDEO_FRAME_SAMPLING_RATE=3
MAX_VIDEO_DURATION=10
BATCH_SIZE=8
MAX_FACES_PER_FRAME=50

# Performance
USE_GPU=false
GPU_MEMORY_FRACTION=0.7
MAX_WORKERS=4

# Model Paths
MODEL_PATH=/app/models
FACENET_MODEL=vggface2
MTCNN_DEVICE=cpu

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/face-service.log
LOG_FORMAT=json

# API Security
API_KEY=your-secure-api-key
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# AWS (if needed)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=